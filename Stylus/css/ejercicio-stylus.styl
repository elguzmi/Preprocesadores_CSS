Fuente1 = 'Lato', sans-serif
fuente2 = 'Oswald', sand-serif
color-primario= #333333
color-segundario= #8841DA
color-claro = #ffffff
* //No se utilizan corchetes ni punto y coma
	box-sizing: border-box
	margin: 0

body
	margin: 0
	font-family: Fuente1
	color: color-primario

.buscador
	width: 100%
	height: 250px
	padding: 100px
	background-image: url("../images/cover.jpg")
	background-repeat: no-repeat;
	background-size: cover
	text-align: center
	&__input
		width: 75%
		height: 60px
		padding: 20px
		border: none
		border-radius: 30px
		font-size: 25px

.encabezado--con-filtros
	display: flex
	width: 90%
	margin: 0 auto
	padding: 30px 0
	h2 
		margin-top: 10px
		text-transform: uppercase
		font-weight: 500
		font-size: 50px
		font-family: fuente2

	.filtros
		width: 250px
		height: 75px
		padding: 20px
		margin-left: auto
		span
			text-transform: uppercase;
			font-family: fuente2
		a
			margin-left: 20px
			font-size: 25px
