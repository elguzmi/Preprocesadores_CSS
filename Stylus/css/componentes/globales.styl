fuente2 = 'Oswald', sand-serif
color-primario= #333333
color-segundario= #8841DA
color-claro = #ffffff

contenedor()
	display: flex
	width: 96%
	margin: 0 auto
	padding: 30px 0


caja-sombra()
	background-color: color-claro
	box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.20)

